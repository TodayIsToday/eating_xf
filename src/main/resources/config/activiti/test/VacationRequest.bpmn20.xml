      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge bpmnElement="flow4" id="BPMNEdge_flow4">
        <omgdi:waypoint x="420.0" y="30.0"></omgdi:waypoint>
        <omgdi:waypoint x="432.0" y="30.0"></omgdi:waypoint>
        <omgdi:waypoint x="432.0" y="30.0"></omgdi:waypoint>
        <omgdi:waypoint x="475.0" y="32.0"></omgdi:waypoint>
      </bpmndi:BPMNEdge>
